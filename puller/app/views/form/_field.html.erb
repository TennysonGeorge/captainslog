<div class="mt3">
  <%= f.label field, t(field), :class => "f6 lh-copy db" %>
  <% content = yield %>
  <% if content.present? %>
    <%= content %>
  <% else %>
    <%= f.text_field field, autofocus: true, :class => "input-reset ba b--black-20 pa2 mb2 db w-100", :placeholder => t(field) %>
  <% end %>
  <%= render "form/field_error", :resource => f.object, :field => field %>
</div>
