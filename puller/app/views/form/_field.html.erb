<div class="mt3">
  <%= f.label field, t(field), :class => "f6 lh-copy db" %>
  <% content = yield %>

  <% if content.present? %>
    <%= content %>
  <% else %>
    <%= f.text_field field, autofocus: true, :class => "input-reset ba b--black-20 pa2 mb2 db w-100", :placeholder => t(field) %>
  <% end %>

  <% if f.object.errors.full_messages_for(field).any? %>
    <span class="f6 dark-red i">
      <%= f.object.errors.full_messages_for(field).join(", ") %>
    </span>
  <% end %>
</div>
