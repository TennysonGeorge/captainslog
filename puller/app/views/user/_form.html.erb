<%= form_for(user, :url => me_path) do |f| %>
  <%= render "form/field", :f => f, :field => :email do %>
    <%= f.email_field :email,
      :class => "input-reset ba b--black-20 pa2 mb2 db w-100" %>
  <% end %>

  <p class="lh-copy i f6 mt4"><%= t(:update_password) %></p>

  <%= render "form/field", :f => f, :field => :password do %>
    <%= f.password_field :current_password,
      :class => "input-reset ba b--black-20 pa2 mb2 db w-100" %>
  <% end %>

  <%= render "form/field", :f => f, :field => :password do %>
    <%= f.password_field :password,
      :class => "input-reset ba b--black-20 pa2 mb2 db w-100" %>
  <% end %>

  <%= render "form/field", :f => f, :field => :password_confirmation do %>
    <%= f.password_field :password_confirmation,
      :class => "input-reset ba b--black-20 pa2 mb2 db w-100" %>
  <% end %>

  <div class="mt4">
    <input type="submit" value="<%= t(:submit) %>" />
  </div>
<% end %>
