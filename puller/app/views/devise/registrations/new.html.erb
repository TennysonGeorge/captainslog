<div class="center mw7 mt5">
  <span class="black i baskerville f2 nowrap">Captain&rsquo;s Log: Puller</span>
  <p class="lh-copy mb4"><%= t(:intro_message) %></p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= FormFieldComponent.render(:form => f, :name => :email, :type => :email, :autofocus => true) %>
    <%= FormFieldComponent.render(:form => f, :name => :password, :type => :password) %>
    <%= FormFieldComponent.render(:form => f, :name => :password_confirmation, :type => :password) %>

    <div class="mt2">
      <% if devise_mapping.rememberable? %>
        <label class="f6 lh-copy">
          <%= f.check_box :remember_me %>
          <%= t(:remember_me) %>
        </label>
      <% end %>
    </div>

    <div class="lh-copy mt4">
      <%= f.submit t(:sign_up), :class => "f6 link bn pa0 input-reset pointer blue" %>
      <span class="f6"><%= t(:or) %></span>
      <%= link_to t(:sign_in).downcase, new_session_path(resource_name), :class => "link blue f6 link" %>
    </div>
  <% end %>
</div>
