<ul>
  <% shorthands.each do |shorthand| %>
    <li>
      <%= link_to "[#{shorthand.priority}] \"#{shorthand.match}\" | \"#{shorthand.text}\" -> \"#{shorthand.expansion}\"",
        book_shorthand_path(shorthand.book.slug, shorthand),
        :class => "link blue"
      %>
    </li>
  <% end %>
</ul>
