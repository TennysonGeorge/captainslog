<%= render "layouts/header" %>

<div class="content-view">
  <h1><%= t(:edit_book) %></h1>
  <%= render "book/edit_form", :book => book %>

  <% unless book.collections.empty? %>
    <hr />

    <h2><%= t(:collections) %></h2>

    <ul>
      <% book.collections.each do |collection| %>
        <li>
          <%= link_to collection.datetime.to_date, book_at_path(book.slug, collection.datetime.to_i), :class => "link" %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
