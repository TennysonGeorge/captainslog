<%= render "layouts/content-view" do %>
  <%= render "form/title", :key => :edit_book %>
  <%= render "book/edit_form", :book => book %>

  <% unless book.extractors.empty? %>
    <hr />
    <%= render "form/subtitle", :key => :extractors %>
    <%= render "extractors/list", :extractors => book.extractors %>
  <% end %>

  <% unless book.shorthands.empty? %>
    <hr />
    <%= render "form/subtitle", :key => :shorthands %>
    <%= render "shorthands/list", :shorthands => book.shorthands %>
  <% end %>

  <% unless book.collections.empty? %>
    <hr />
    <%= render "form/subtitle", :key => :collections %>
    <%= render "collections/list", :collections => book.collections %>
  <% end %>
<% end %>
