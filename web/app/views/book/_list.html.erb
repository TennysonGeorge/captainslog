<div class="table">
  <table class="table">
    <tr>
      <th><%= t(:name) %></td>
      <th><%= t(:slug) %></td>
      <th><%= t(:grouping) %></td>
      <th><%= t(:collections) %></td>
      <th><%= t(:entries) %></td>
    </tr>
    <% books.each do |book| %>
      <tr>
        <td class="nowrap">
          <%= link_to book.name, edit_book_path(book.slug), :class => "link" %>
        </td>
        <td><%= book.slug %></td>
        <td><%= t("group_by_#{book.grouping}") %></td>
        <td class="text-right"><%= book.collections.count %></td>
        <td class="text-right"><%= book.entries.count %></td>
      </tr>
    <% end %>
  </table>
</div>
