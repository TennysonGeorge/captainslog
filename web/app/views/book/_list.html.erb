<div class="table">
  <table class="table">
    <tr>
      <th><%= t(:name) %></td>
      <th><%= t(:slug) %></td>
      <th><%= t(:grouping) %></td>
      <th><%= t(:collections) %></td>
      <th><%= t(:entries) %></td>
    </tr>
    <% books.each do |book| %>
      <tr class="controlled">
        <td class="nowrap">
          <%= book.name %>
          <span class="controls">
            <%= link_to image_tag("edit.svg"), edit_book_path(book.slug), :class => "control" %>
            <%= link_to image_tag("trash.svg"), book_path(book.slug),
              :method => :delete,
              :class => "control",
              :data => { :confirm => t(:are_you_sure_q) }
            %>
          </span>
        </td>
        <td><%= book.slug %></td>
        <td><%= t("group_by_#{book.grouping}") %></td>
        <td class="text-right"><%= book.collections.count %></td>
        <td class="text-right"><%= book.entries.count %></td>
      </tr>
    <% end %>
  </table>
</div>
