<%= render "layouts/content-view" do %>
  <%= render "form/title", :key => :edit_report_variable %>
  <%= render "report_variable/edit_form", :report_variable => report_variable %>

  <hr />
  <%= link_to t(:delete), report_report_variable_path(report_variable.report, report_variable),
