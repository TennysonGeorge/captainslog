<%= form_for(report_variable, :url => report_variable.id.present? ? report_report_variable_path(report_variable.report, report_variable) : report_report_variable_index_path) do |f| %>
  <%= render "form/field", :f => f, :field => :label %>
  <%= render "form/field", :f => f, :field => :default_value %>
  <%= render "form/field", :f => f, :field => :query do %>
    <textarea name="report_variable[query]" rows="5"><%= report_variable.query %></textarea>
  <% end %>

  <%= render "form/timestamps", :f => f %>
  <%= render "form/actions", :f => f, :back_url => user_path %>
<% end %>
