<%= render "layouts/content-view" do %>
  <%= render "form/title", :key => :edit_connection %>
  <%= render "connection/edit_form", :connection => connection, :books => books %>

  <hr />

  <%= link_to t(:authenticate), authenticate_connection_path(connection), :class => "btn" %>
  <% if connection.book.present? %>
    <%= link_to t(:schedule_data_pull), schedule_data_pull_connection_path(connection), :class => "btn" %>
  <% end %>

  <hr />
  <%= link_to t(:delete), connection_path(connection),
    :method => :delete,
    :class => "btn destructive",
    :data => { :confirm => t(:are_you_sure_q) }
  %>
<% end %>
