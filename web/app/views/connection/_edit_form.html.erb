<%= form_for(connection) do |f| %>
  <%= render "form/field", :f => f, :field => :book do %>
    <%= f.select(:book_id, books.map { |book| [book.name, book.id] }, :include_blank => true) %>
  <% end %>

  <%= render "form/field", :f => f, :field => :data_source do %>
    <%= f.text_field :data_source, :readonly => true %>
  <% end %>

  <%= render "form/field", :f => f, :field => :last_update_attempted_at do %>
    <%= f.text_field :last_update_attempted_at, :readonly => true %>
  <% end %>

  <%= render "form/timestamps", :f => f %>
  <%= render "form/actions", :f => f, :back_url => user_path %>
<% end %>
