<div class="entry-list">
  <% entries.each do |entry| %>
    <div class="entry-item">
      <span><%= entry.text %></span>

      <% unless entry.data.empty? %>
        <div class="entry-datum">
          <% entry.data.each do |key, val| %>
            <span class="entry-data"><%= key %>: <%= val %></span>
          <% end %>
        </div>
      <% end %>

    </div>
  <% end %>
</div>
