<%= render "layouts/header" %>

<div class="content-view slim">
  <textarea
    name="text"
    rows="5"
    class="entry-input"
    autofocus="true"
  ><%= entry.text %></textarea>

  <div class="entry-datum">
    <% entry.user_data.each do |key, val| %>
      <span class="entry-data"><%= key %>: <%= val %></span>
    <% end %>
  </div>
</div>
