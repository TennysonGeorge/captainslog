<%= render "layouts/content-view" do %>
  <%= render "form/title", :key => :edit_entry %>
  <%= render "entry/edit_form", :entry => entry %>

  <hr />
  <%= link_to t(:delete), book_entry_url(entry.book.slug, entry),
    :method => :delete,
    :class => "btn destructive",
    :data => { :confirm => t(:are_you_sure_q) }
  %>
<% end %>
