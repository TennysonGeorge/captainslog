<%= form_for(report, :url => report.id.present? ? report_path(report) : report_index_path) do |f| %>
  <%= render "form/field", :f => f, :field => :label %>
  <%= render "form/timestamps", :f => f %>

  <%= render "form/actions", :f => f,
    :paths => { :back => user_path, :delete => report } do %>
    <%= block_given? && yield %>
  <% end %>
<% end %>
