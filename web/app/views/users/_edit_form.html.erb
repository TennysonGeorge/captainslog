<%= form_for(user, :url => user_path, :method => :patch) do |f| %>
  <%= render "form/field", :f => f, :field => :name %>
  <%= render "form/field", :f => f, :field => :email %>

  <%= render :layout => "form/field", :locals => { :f => f, :field => :timezone } do %>
    <%= select(:user, :timezone, TZInfo::Timezone.all_identifiers, :object => user) %>
  <% end %>

  <%= render "form/field", :f => f, :field => :homepage do %>
    <%= select(:user, :homepage, user.homepage_options, :object => user) %>
  <% end %>

  <%= render "form/actions", :f => f, :back_url => user_path %>
<% end %>
